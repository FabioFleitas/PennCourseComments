{
  "manifest_version": 2,

  "name": "PennCourseComments",
  "description": "Discuss Penn courses on PennInTouch & PennCourseReview",

  "version": "1.0",

  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],

  "content_scripts": [
    {
      "matches": ["http://penncoursereview.com/course/*", "https://penncoursereview.com/course/*",
                  "http://penncoursereview.com/department/*", "https://penncoursereview.com/department/*"],
      "js": ["content_scripts/js/jquery.min.js", "content_scripts/js/penncoursereview.js", "content_scripts/js/loadDisqus.js"] 
    },
    {
      "matches": ["https://pennintouch.apps.upenn.edu/pennInTouch/*", "https://pennintouch.apps.upenn.edu/pennInTouch/*"],
      "css": ["content_scripts/css/bootstrap.min.css"],
      "js": ["content_scripts/js/jquery.min.js", "content_scripts/js/bootstrap.min.js", 
             "content_scripts/js/pennintouch.js", "content_scripts/js/loadDisqus.js"] 
    }
  ]
}
